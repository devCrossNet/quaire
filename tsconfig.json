{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "target": "es2019",
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["./src"],
  "exclude": ["/node_modules/", "dist"]
}
