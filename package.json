{
  "name": "quaire",
  "version": "0.0.0",
  "description": "a framework-agnostic library to build user-flows, surveys, and questionnaires",
  "keywords": [
    "user-flow",
    "user-flows",
    "survey",
    "surveys",
    "questionnaire",
    "questionnaires",
    "decision tree"
  ],
  "author": "Johannes Werner <johannes.werner@hey.com>",
  "homepage": "https://github.com/devCrossNet/quaire#readme",
  "license": "MIT",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devCrossNet/quaire.git"
  },
  "scripts": {
    "compile": "tsc",
    "prebuild": "npm run clean",
    "build": "npm run compile",
    "clean": "rimraf ./dist",
    "dev": "tsc --watch",
    "test": "jest --coverage",
    "prettier": "prettier --config .prettierrc --ignore-path .prettierignore ./packages/**/*.{ts,js}",
    "lint": "eslint . --ext ts,vue --fix --cache"
  },
  "bugs": {
    "url": "https://github.com/vuesion/packages/issues"
  },
  "dependencies": {
    "lodash.isnil": "^4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.19",
    "@types/node": "^12.12.21",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.4.1",
    "generate-changelog": "^1.8.0",
    "glob": "^7.1.6",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged && npm run lint && npm run test"
    }
  },
  "jest": {
    "globals": {
      "window": true
    },
    "rootDir": ".",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "html",
      "text",
      "lcov",
      "json"
    ],
    "preset": "ts-jest",
    "testMatch": null
  }
}
